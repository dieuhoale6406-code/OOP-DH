{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/program.exe",   // chạy file vừa build
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,   // chạy trong terminal tích hợp, không auto đóng
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",   // MinGW-w64 đi kèm gdb.exe
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build project"
        }
    ]
}
